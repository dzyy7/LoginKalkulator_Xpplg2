<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtbahasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="English (US) v"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/logoinsta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="165dp"/>

    <EditText
        android:padding="15dp"
        android:background="@drawable/block"
        android:id="@+id/txtuser"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"/>

    <EditText
        android:padding="15dp"
         android:background="@drawable/block"
        android:id="@+id/txtpass"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/txtuser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:padding="10dp"
        android:id="@+id/btnlog"
        android:layout_marginEnd="28dp"
        android:layout_marginStart="28dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtpass"
        android:layout_marginTop="8dp"
        android:backgroundTint="#39A7FF"/>

    <TextView
        android:id="@+id/txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnlog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Forgot Password?"
        android:textStyle="bold"/>

    <View
        android:id="@+id/leftLine"
        android:layout_width="155dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:background="#000000"
        app:layout_constraintEnd_toStartOf="@+id/orText"
        app:layout_constraintTop_toBottomOf="@+id/txtview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="210dp"/>

    <TextView
        android:id="@+id/orText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="7pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="210dp"/>

    <View
        android:id="@+id/rightLine"
        android:layout_width="155dp"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:background="#000000"
        app:layout_constraintStart_toEndOf="@+id/orText"
        app:layout_constraintTop_toBottomOf="@+id/txtview"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="210dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/orText"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/imgfb"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/logofb"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:id="@+id/logofb"
            android:textColor="#39A7FF"
            android:textStyle="bold"
            android:text="Log in with Facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@+id/txtview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#000000"/>

    <TextView
        android:id="@+id/signUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Don't have an account? Sign up."/>

</androidx.constraintlayout.widget.ConstraintLayout>